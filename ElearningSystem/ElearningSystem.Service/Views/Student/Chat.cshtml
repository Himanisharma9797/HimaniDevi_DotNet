@page
    <center>
        <h2 class="text-dark">Chat</h2>
    </center>
    <br />
    <div class="container" style="background-color:lavender">
        <div class="row">&nbsp;</div>
        <div class="row" style="margin-left:30%">
            <div class="col-2 "><strong>User</strong>  </div>
            <div class="col-4"><input type="text" id="userInput" /></div>
        </div>
        <br />
        <div class="row" style="margin-left: 30%">
            <div class="col-2 text-dark"><strong>Message</strong></div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
        </div>
        <br />
        <div class="row" style="margin-left:43%">
            <div class="col-6">
                <input class="btn btn-primary" type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>